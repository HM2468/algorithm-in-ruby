{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rspec: current file",
      "type": "shell",
      "command": "${env:HOME}/.rbenv/shims/bundle",
      "args": ["exec", "rspec", "${relativeFile}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "rspec: all",
      "type": "shell",
      "command": "${env:HOME}/.rbenv/shims/bundle",
      "args": ["exec", "rspec"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rspec: all",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "rspec: current file",
      "type": "shell",
      "command": "bundle",
      "args": ["exec", "rspec", "${file}"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}